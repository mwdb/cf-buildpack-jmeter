#!/usr/bin/env bash
# usage: bin/compile <build-dir> <cache-dir>

# Fail fast, fail hard
set -eo pipefail

# Directories
BUILD_DIR=$1
CACHE_DIR=$2

echo "****ENV VARS****"
echo $TEST_URL
echo $LOAD_SCRIPT
echo "****END ENV VARS****"


#a place to find the app before we start doing other stuff
mkdir theApp
ls $BUILD_DIR
echo post build directory

mv $BUILD_DIR/* theApp/
echo "created theApp directory"
#create the directories to do work in
mkdir -p "$BUILD_DIR" "$CACHE_DIR"

echo $RESOURCES
ls -alrt $RESOURCES

# Files
JDK_BLOB=https://download.run.pivotal.io/openjdk-jdk/trusty/x86_64/openjdk-1.8.0_51.tar.gz
JDK=openjdk-1.8.0_51.tar.gz
JMETER_BLOB=https://mirror.netcologne.de/apache.org//jmeter/binaries/apache-jmeter-5.3.tgz
JMETER=apache-jmeter-5.3.tgz
NGINX_BLOB=https://nginx.org/download/nginx-1.19.6.tar.gz
NGINX=nginx-1.19.6.tar.gz

if [ ! -d $BUILD_DIR/local ]
then
  mkdir -p $BUILD_DIR/local
fi

if [ ! -d $BUILD_DIR/local/jdk ]
then
  mkdir -p $BUILD_DIR/local/jdk
fi

if [ ! -d $BUILD_DIR/local/nginx ]
then
  #mkdir -p $BUILD_DIR/local/nginx
fi

# Explode the JMETER tarball to BUILD_DIR
if [ ! -e $BUILD_DIR/local/apache-jmeter-5.3 ]
then
  if [ ! -e $CACHE_DIR/$JMETER ]
  then
    OLDPWD=$(pwd)
    cd $CACHE_DIR && wget -q $JMETER_BLOB

    cd $OLDPWD
  fi
  echo "------> Installing JMETER ($JMETER)..."
  tar -xzf $CACHE_DIR/$JMETER -C $BUILD_DIR/local
fi

# Explode the OpenJDK tarball to BUILD_DIR
if [ ! -e $BUILD_DIR/local/jdk/bin ]
then
  echo "------> Installing JDK ($JDK)..."
  if [ ! -e $CACHE_DIR/$JDK ]
  then
    OLDPWD=$(pwd)
    cd $CACHE_DIR && wget -q $JDK_BLOB
    cd $OLDPWD
  fi
  tar -xzf $CACHE_DIR/$JDK -C $BUILD_DIR/local/jdk
fi

# Explode the nginx tarball to BUILD_DIR
if [ ! -e $BUILD_DIR/local/nginx ]
then
  echo "------> Installing nginx"
  if [ ! -e $CACHE_DIR/$JDK ]
  then
    OLDPWD=$(pwd)
    cd $CACHE_DIR && wget -q $NGINX_BLOB
    cd $OLDPWD
  fi
  tar -xzf $CACHE_DIR/$NGINX -C $BUILD_DIR/local/nginx
fi

# Move the app into position
pwd
for f in app/*
do
echo $f
done
ls
mv theApp/* $BUILD_DIR/local/
rm -rf theApp

ls $BUILD_DIR/local
echo "Anything in jdk folder"
$BUILD_DIR/local/jdk/bin/java -version

echo "Complete."
